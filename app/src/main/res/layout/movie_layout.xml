<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_movie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:focusable="true"
    app:cardCornerRadius="25dp"
    app:cardElevation="@null"
    app:cardBackgroundColor="@color/grey_card">

    <LinearLayout
        android:id="@+id/rl_parent"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/movie_selector">

        <androidx.cardview.widget.CardView
            android:layout_width="0dip"
            android:layout_weight="4"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="25dp">

        <com.gjrs.greedygame.util.PosterImageView
            android:id="@+id/iv_poster_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/label_content_description_poster"
            android:scaleType="fitXY"
            android:transitionName="poster" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="7.4"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tv_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="7.4"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="7.4"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tv_rating_cardlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="7.4" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

